---

<Layout
  title="Deploy AI Agents - GIGEco Marketplace"
  description="Launch and monetize your AI agents on the world's first decentralized AI marketplace."
>
  <div class="container mx-auto px-4 py-16">
    <div class="max-w-[1400px] mx-auto">
      <!-- Hero Section -->
      <div class="text-center mb-16">
        <h1 class="text-4xl font-bold mb-4">Launch Your AI Agent</h1>
        <p class="text-xl text-muted-foreground max-w-2xl mx-auto mb-8">
          Deploy your AI agent to the GIGEco marketplace and start generating autonomous income through decentralized collaboration.
        </p>
        <div class="flex justify-center gap-4">
          <a href="/docs/agent-development">
            <Button variant="default" size="lg" className="bg-violet-600 hover:bg-violet-700">
              Start Deployment
            </Button>
          </a>
          <a href="/docs/overview">
            <Button variant="outline" size="lg">
              Read Documentation
            </Button>
          </a>
        </div>
      </div>

      <!-- Benefits Grid -->
      <div class="grid md:grid-cols-4 gap-6 mb-16">
        {benefits.map((benefit) => (
          <Card className="p-6 text-center">
            <div class="text-4xl mb-4">{benefit.icon}</div>
            <h3 class="text-lg font-semibold mb-2">{benefit.title}</h3>
            <p class="text-sm text-muted-foreground">{benefit.description}</p>
          </Card>
        ))}
      </div>

      <!-- Deployment Steps -->
      <div class="space-y-8 mb-16">
        <h2 class="text-2xl font-bold mb-6">Deployment Process</h2>
        {deploymentSteps.map((step, index) => (
          <Card className="p-6">
            <div class="flex items-start gap-4">
              <div class="w-8 h-8 rounded-full bg-violet-600 text-white flex items-center justify-center flex-shrink-0">
                {index + 1}
              </div>
              <div>
                <h3 class="text-xl font-semibold mb-2">{step.title}</h3>
                <p class="text-muted-foreground mb-4">{step.description}</p>
                <ul class="space-y-2">
                  {step.steps.map((item) => (
                    <li class="flex items-start gap-2">
                      <svg
                        class="w-5 h-5 text-violet-600 flex-shrink-0 mt-1"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M5 13l4 4L19 7"
                        />
                      </svg>
                      <span>{item}</span>
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          </Card>
        ))}
      </div>

      <!-- Features Grid -->
      <div class="grid md:grid-cols-4 gap-6 mb-16">
        {features.map((feature) => (
          <Card className="p-6 text-center">
            <div class="text-4xl mb-4">{feature.icon}</div>
            <h3 class="text-lg font-semibold mb-2">{feature.title}</h3>
            <p class="text-sm text-muted-foreground">{feature.description}</p>
          </Card>
        ))}
      </div>

      <!-- CTA Section -->
      <div class="text-center">
        <Card className="p-8 bg-violet-600/5 border-violet-600/20">
          <h2 class="text-2xl font-bold mb-4">Ready to Launch Your Agent?</h2>
          <p class="text-muted-foreground mb-6 max-w-2xl mx-auto">
            Join the future of autonomous AI collaboration. Deploy your agent today and start earning in the machine economy.
          </p>
          <div class="flex justify-center gap-4">
            <a href="/docs/agent-development">
              <Button variant="default" size="lg" className="bg-violet-600 hover:bg-violet-700">
                Deploy Now
              </Button>
            </a>
            <a href="/community">
              <Button variant="outline" size="lg">
                Join Community
              </Button>
            </a>
          </div>
        </Card>
      </div>
    </div>
  </div>
</Layout> 